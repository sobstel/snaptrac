{
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "plugins": ["react", "prettier"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module",
    "babelOptions": {
      "configFile": "./babel.config.js"
    }
  },
  "rules": {
    "import/extensions": ["error", "never"],
    "no-param-reassign": "off",
    "no-use-before-define": "off",
    "prettier/prettier": [
      "error",
      {
        "arrowParens": "always",
        "endOfLine": "auto",
        "printWidth": 100,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "all"
      }
    ],
    "react/jsx-props-no-spreading": "off",
    "react/prop-types": "off",
    "react/style-prop-object": "off"
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}